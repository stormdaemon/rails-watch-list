<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content border-0 shadow-lg">
      <!-- Header avec fond sombre et texte blanc -->
      <div class="modal-header bg-dark text-white border-0">
        <div class="d-flex align-items-center">
          <i class="fas fa-list-ul me-3 fs-4"></i>
          <h1 class="modal-title fs-4 fw-bold mb-0 text-white" id="staticBackdropLabel">Créer votre liste</h1>
        </div>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Fermer"></button>
      </div>

      <!-- Body avec fond blanc et texte sombre -->
      <div class="modal-body p-4 bg-white">
        <%= simple_form_for @list do |f| %>
          <div class="mb-4">
            <%= f.input :name,
                label: "Nom de la liste",
                placeholder: "Entrez le nom de votre liste...",
                input_html: {
                  class: "form-control form-control-lg border-2 border-dark",
                  style: "border-radius: 8px; color: #212529; background-color: #ffffff;"
                },
                label_html: { class: "form-label fw-bold text-dark mb-2", style: "color: #212529 !important;" } %>
          </div>

          <!-- Boutons avec contraste élevé -->
          <div class="d-flex gap-3 justify-content-end mt-4">
            <button type="button"
                    class="btn px-4 py-2 fw-semibold"
                    data-bs-dismiss="modal"
                    style="border: 2px solid #212529; color: #212529; background-color: transparent;"
                    onmouseover="this.style.backgroundColor='#f8f9fa'"
                    onmouseout="this.style.backgroundColor='transparent'">
              <i class="fas fa-times me-2"></i>Annuler
            </button>
            <%= f.button :submit,
                class: "btn px-4 py-2 fw-semibold text-white",
                style: "background-color: #198754; border: 2px solid #198754; color: #ffffff !important;" do %>
              <i class="fas fa-plus me-2"></i>Créer la liste
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
